@using EMT_WebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <link href="~/Content/Admin/css/style.css" rel="stylesheet" />


</head>
<body>
    <center><h1 style="color:rgb(41,160,209);font-weight:bold;font-size:60px;">Admin</h1></center> 
    <div class="wrapper">
        <div class="container">
            @*<h1>Welcome</h1>*@
            <img src="~/Content/img/user_login.png" />
            @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = ViewBag.ReturnUrlAdmin }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationMessage("login", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email Address", @required = "required" })
                @Html.ValidationMessageFor(m => m.Email)
                @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", type = "password", @required = "required" })
                @Html.ValidationMessageFor(m => m.Password)

                <button type="submit">Login</button>
            }
        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Content/Admin/js/index.js"></script>


</body>
</html>


