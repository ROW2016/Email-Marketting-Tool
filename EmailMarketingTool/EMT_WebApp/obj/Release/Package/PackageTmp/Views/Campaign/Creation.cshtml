@model EMT_WebApp.Models.M_Campaigns
@{
    ViewBag.Title = "Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">Create a new Campaign</h1>
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Campaign", "Campaign", "Campaign", new { @class = "btn btn-sm btn-primary" })
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"> Kindly provide the following details  </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                            @using (Html.BeginForm("registerCampaign", "Campaign", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="sel1">Select a type of campaign to send:</label>
                                    @Html.DropDownListFor(model => model.CTypeId, (SelectList)ViewBag.campTypes, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label for="sel1">Select a list</label>
                                    @Html.DropDownListFor(model => model.ListId, (SelectList)ViewBag.List, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Name your campaign</label>

                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", placeholder = "Campaign Name" })
                                    @Html.ValidationMessage("cname", new { @class = "text-danger" })
                                    <p class="help-block">Provide a campign name</p>
                                </div>
                                <div class="form-group">
                                    <label>Email subject </label>
                                    @Html.TextBoxFor(m => m.EmailSubject, new { @class = "form-control", required = "required", placeholder = "Subject" })
                                    <p class="help-block">Provide subject line for your email campaign.</p>
                                </div>
                                <div class="form-group">
                                    <label>From name </label>
                                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", required = "required", placeholder = "From Name" })
                                    <p class="help-block"> Use something subscribers will instantly recognize, like your company name. </p>
                                </div>
                                <div class="form-group">
                                    <label>From email address </label>
                                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", required = "required", placeholder = "Email id" })
                                </div>
                                <div class="form-group">
                                    <label>Schedule Campaign (In minuits) </label>
                                    @Html.TextBoxFor(m => m.ScheduleCampaign, new { @class = "form-control",placeholder = "minuits" })
                                </div>
                                <div class="form-group">
                                    <label>Number of emails send per interval </label>
                                    @Html.TextBoxFor(m => m.noOfEmailSendPerInterval, new { @class = "form-control", placeholder = "Number of emails" })
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                                @Html.ActionLink("Cancel", "Campaign", null, new { @class="btn btn-dafault"})
                                @*<a href="new_template.html"><button type="button" class="btn btn-default">Next</button></a>*@
                            }

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->