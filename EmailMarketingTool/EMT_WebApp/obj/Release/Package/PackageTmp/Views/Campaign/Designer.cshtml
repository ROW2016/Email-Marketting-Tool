<script>
    function saveInfo() {


        var cont = document.getElementById("coderr").innerText;
        //var contetnt = $.parseHTML(cont).
        var data = {
            UserName: cont
        };
        debugger;
        $.ajax({
            type: "POST",
            url: "@Url.Action("saveCampInfo", "Campaign")",
            data: JSON.stringify(data),
            beforeSend: function () {
                $('.loader').show()
            },
            success: function () {
               location.href='Campaign/Campaign'
            },
            complete: function(){
                $('.loader').hide();
            },
            contentType: 'application/json'
        });

    }


</script>

