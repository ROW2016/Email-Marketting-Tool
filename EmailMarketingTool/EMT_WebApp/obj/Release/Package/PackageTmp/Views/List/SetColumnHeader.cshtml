@model EMT_WebApp.Models.Subscriber
<body>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="page-header">Lists</h1>
            </div>
            <div class="col-lg-2 pull-left">

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Bind Columns
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
@using (Html.BeginForm("SetColumnHeader", "List", FormMethod.Post))
{
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email Address</th>
                                        <th>Alternate EmailAddress</th>
                                        <th>Address</th>
                                        <th>Country</th>
                                        <th>City</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                      <td>
                                          @Html.DropDownListFor(m => Model.FirstName, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                      </td> 
                                        <td>
                                            @Html.DropDownListFor(m => Model.LastName, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                        </td> 
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DropDownListFor(m => Model.EmailAddress, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(m => Model.AlternateEmailAddress, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DropDownListFor(m => Model.Country, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(m => Model.City, (SelectList)ViewBag.columnsHeader, new { @class = "form-control" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
}
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>


</body>


